<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/BackgroundBlue"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cl2"
    android:layout_marginTop="20dp">


    <ImageView
        android:id="@+id/ivCreateClass"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginRight="20dp"
        android:scaleType="fitXY"
        android:layout_marginTop="40dp"
        android:src="@mipmap/startclass"
        app:layout_constraintBottom_toTopOf="@id/btnStrtClass"
        app:layout_constraintEnd_toStartOf="@+id/ivClassSchedule"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cl2"

        />

    <ImageView
        android:id="@+id/ivClassSchedule"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:src="@mipmap/schedule"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@id/btnClassSchd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivCreateClass"
        app:layout_constraintTop_toTopOf="@id/cl2"
        />


    <Button
        android:id="@+id/btnStrtClass"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:gravity="center"
        android:onClick="Strtcls"
        android:text="START CLASS"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btnClassSchd"
        app:layout_constraintHorizontal_weight="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCreateClass" />

    <Button
        android:id="@+id/btnClassSchd"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center"
        android:onClick="ClsSchd"
        android:text="CLASS SCHEDULE"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnStrtClass"
        app:layout_constraintTop_toBottomOf="@+id/ivClassSchedule"
        />


    <ImageView
        android:id="@+id/ivCrtAssing"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:scaleType="fitXY"
        android:src="@mipmap/createassing"
        app:layout_constraintBottom_toTopOf="@+id/btnCrtAssing"
        app:layout_constraintEnd_toStartOf="@+id/ivVwAssing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStrtClass"
        />

    <ImageView
        android:id="@+id/ivVwAssing"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:src="@mipmap/viewassing"
        app:layout_constraintBottom_toTopOf="@id/btnVwAssing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivCrtAssing"
        app:layout_constraintTop_toBottomOf="@+id/btnClassSchd"/>

    <Button
        android:id="@+id/btnCrtAssing"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:onClick="CrtAsng"
        android:text="CREATE ASSINGMENT"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/btnVwAssing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCrtAssing" />

    <Button
        android:id="@+id/btnVwAssing"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center"
        android:onClick="VwAsng"
        android:text="VIEW      ASSINGMENT"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCrtAssing"
        app:layout_constraintTop_toBottomOf="@+id/ivVwAssing" />


</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/AsngName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/almendra_bold"
        android:hint="MY FIRST ASSINGMENT"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/AsngClas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aladin2"

        android:hint="Class :"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/AsngSub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:fontFamily="@font/aladin2"
        android:hint="Subject :"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/AsngDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:fontFamily="@font/aladin2"
        android:hint="Assinged On:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/AsngLastDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aladin2"
        android:hint="Submite Before :"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <Button
            android:id="@+id/btnView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/BackgroundBlue"
            android:textColor="#FFFFFF"
            android:text="VIEW"

            android:textSize="20dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnSubmsn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1.3"
            android:background="@color/BackgroundBlue"
            android:text="SUBMISSIONS"
android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#b3b0af" />



</LinearLayout>

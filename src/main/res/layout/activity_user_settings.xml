<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSettings"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Account Details"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/almendra_bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/alegreya"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="8dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:id="@+id/ename"
            android:layout_marginTop="-8dp"
            android:fontFamily="@font/aladin"
            android:layout_marginLeft="8dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/alegreya"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:fontFamily="@font/aladin"
            android:layout_marginTop="-8dp"
            android:id="@+id/esubject"
            android:layout_marginLeft="8dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Password:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/alegreya"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:fontFamily="@font/aladin"
            android:layout_marginTop="-8dp"
            android:id="@+id/opassw"
            android:layout_marginLeft="8dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Details"
            android:background="@color/BackgroundBlue"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="SaveDetails"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Account Password"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/almendra_bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Password:"
            android:layout_marginTop="40dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"

            android:fontFamily="@font/alegreya"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:fontFamily="@font/aladin"
            android:id="@+id/cpassw"
            android:layout_marginTop="-8dp"
            android:layout_marginLeft="8dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NewPassword:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/alegreya"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:fontFamily="@font/aladin"
            android:layout_marginTop="-8dp"
            android:id="@+id/npassw"
            android:layout_marginLeft="8dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/alegreya"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:fontFamily="@font/aladin"
            android:layout_marginLeft="8dp"
            android:id="@+id/cnpassw"
            android:layout_marginTop="-8dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:background="@color/BackgroundBlue"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="ChangePassword"/>
    </LinearLayout>
    </ScrollView>

</LinearLayout>
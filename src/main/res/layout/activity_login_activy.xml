<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivy"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_gravity="center"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="LOGIN"
        android:textSize="50dp"
        android:textStyle="bold"
        android:background="@drawable/customize_heading"
        android:fontFamily="@font/alegreya"
        android:layout_marginTop="40dp"/>
<EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
    android:hint="Username"
    android:layout_marginTop="40dp"
    android:textSize="20dp"
    android:textStyle="bold"
    android:id="@+id/usrname"
    android:drawableStart="@drawable/username_foreground"

    android:background="@drawable/custom_edittext"
    android:drawableLeft="@mipmap/username" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Password"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/password"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        android:inputType="textPassword"
        android:background="@drawable/custom_edittext"
        android:padding="5dp"
        android:drawableLeft="@drawable/ic_password"
        android:paddingLeft="10dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:layout_marginTop="40dp"
        android:textSize="30dp"
        android:background="@drawable/customize_button"
        android:padding="2dp"
        android:onClick="login"/>
    </LinearLayout>

</LinearLayout>